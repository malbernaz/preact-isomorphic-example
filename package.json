{
  "name": "isomorphic-preact",
  "version": "1.0.0",
  "description": "isomorphic architecture preact example",
  "author": "malbernaz <albernazmiguel@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev:client": "webpack --env dev:client",
    "build:dev:server": "webpack --env dev:server",
    "build:dev": "yarn cleandist && yarn build:dev:client && yarn build:dev:server",
    "build:prod:client": "webpack --env prod:client",
    "build:prod:server": "webpack --env prod:server",
    "build:prod": "yarn cleandist && yarn build:prod:client && yarn build:prod:server",
    "cleandist": "rimraf dist",
    "dev": "yarn build:dev && concurrently --raw --kill-others 'yarn watch:server' 'yarn nodemon' 'yarn watch:client'",
    "nodemon": "nodemon --watch dist --ignore dist/public/ --delay 1 --exec 'node --inspect' dist",
    "start": "yarn build:prod && node dist",
    "watch:client": "webpack-dev-server --env dev:client",
    "watch:server": "webpack --env dev:server --watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.2",
    "image-webpack-loader": "^3.3.1",
    "isomorphic-style-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "postcss-loader": "1.3.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-stats-plugin": "^0.1.5",
    "worker-loader": "malbernaz/worker-loader"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.15.3",
    "history": "^4.6.1",
    "hoist-non-react-statics": "^1.2.0",
    "isomorphic-fetch": "^2.2.1",
    "normalize.css": "^7.0.0",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "preact-render-to-string": "^3.6.3",
    "serve-favicon": "^2.4.3",
    "universal-router": "^3.2.0"
  },
  "engines": {
    "node": ">=6.3.0"
  }
}
